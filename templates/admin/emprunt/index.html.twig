{% extends 'base.html.twig' %}

{% block title %}Emprunt index{% endblock %}

{% block h1 %}Liste des emprunts{% endblock %}

{% block body %}
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Abonné</th>
                <th>Livre</th>
                <th>Date d'emprunt</th>
                <th>Retour prévue</th>
                <th>Date de retour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.id }}</td>
                <td>{{ emprunt.abonne.pseudo }}</td>
                <td>{{ emprunt.livre.titre }}</td>
                <td>{{ emprunt.dateEmprunt|date('d/m/y') }}</td>
                <td>{{ emprunt.datePrevue|date('d/m/y') }}</td>
                <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date('d/m/y') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_emprunt_show', {'id': emprunt.id}) }}">show</a>
                    <a href="{{ path('app_admin_emprunt_edit', {'id': emprunt.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_emprunt_new') }}">Create new</a>
{% endblock %}
