{% extends 'base.html.twig' %}

{% block title %}Liste des livres {% endblock %}

{% block body %}
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Résumé</th>
                <th>Couverture</th>
            </tr>
        </thead>
        <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.auteur.identite }}</td>
                    <td>{{ livre.resume }}</td>
                    <td>
                        <img class="vignette" src="/images/{{ livre.couverture }}" alt="pas de couverture pour {{ livre.titre }}">
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
