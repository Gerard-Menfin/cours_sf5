{% extends 'base.html.twig' %}

{% block title %}Abonne{% endblock %}

{% block body %}
    <h1>Abonne</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonne.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ abonne.pseudo }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ abonne.roles ? abonne.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ abonne.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ abonne.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ abonne.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ abonne.adresse }}</td>
            </tr>

            <tr>
                <th>Emprunts</th>
                <td>
                    <table class="table">
                        {# EXO : afficher tous les emprunts de l'abonné #}
                        <thead>
                            <tr>
                                <th>Livre</th>
                                <th>Emprunté le</th>
                                <th>Retour prévue le</th>
                                <th>Rendu le</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for emprunt in abonne.emprunts %}
                                <tr>
                                    <td>{{ emprunt.livre.titre }}</td>
                                    <td>{{ emprunt.dateEmprunt|date("d/m/y") }}</td>
                                    <td>{{ emprunt.datePrevue|date("d/m/y") }}</td>
                                    <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date("d/m/y") : "à rendre" }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_abonne_index') }}">back to list</a>

    <a href="{{ path('app_admin_abonne_edit', {'id': abonne.id}) }}">edit</a>

    {{ include('admin/abonne/_delete_form.html.twig') }}
{% endblock %}
